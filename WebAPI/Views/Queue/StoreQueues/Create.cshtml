@using WebAPI.Models.QueueViewModel;
@model StoreQueueViewModel

@{
    ViewBag.Title = "Create";
}

<div class="card ml-5 mr-5">
    <div class="card-header">
        <h4 class="m-0 p-0">Create Store Queue</h4>
    </div>
    <div class="card-body ml-5 mr-5">
        <div class="row">
            <form asp-action="Create" class="pl-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group col-lg-12 col-md-6 col-sm-3">
                    <label asp-for="EstablishmentId" class="control-label"></label>
                    <div>
                        <select asp-items="@ViewBag.Establishments" asp-for="EstablishmentId" class="form-control fk-select">
                            <option></option>
                        </select>
                    </div>
                    <span asp-validation-for="EstablishmentId" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-12 col-md-6 col-sm-3">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control"/>
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>
</div>




@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}