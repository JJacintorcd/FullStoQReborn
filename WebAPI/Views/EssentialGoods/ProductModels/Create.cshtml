@using WebAPI.Models.EssentialGoodsViewModel;
@model ProductModelViewModel

<div class="card">
    <div class="card-header bg-greenish-green">
        <h2 class="float-left">
            @ViewData["Title"]
        </h2>
    </div>
    <div class="card-body">
        <div class="ml-5 mr-5">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-lg-3 col-md-6 col-sm-12">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control ml-2" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-3 col-md-6 col-sm-12">
                    <label asp-for="BarCode" class="control-label"></label>
                    <input asp-for="BarCode" class="form-control ml-2" />
                    <span asp-validation-for="BarCode" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-3 col-md-6 col-sm-12">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control ml-2" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-3 col-md-6 col-sm-12">
                    <label asp-for="Amount" class="control-label"></label>
                    <input asp-for="Amount" class="form-control ml-2" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-3 col-md-6 col-sm-12">
                    <label asp-for="BrandId" class="control-label"></label>
                    <div class="ml-2">
                        <select asp-items="@ViewBag.Brands" asp-for="BrandId" class="form-control fk-select">
                            <option></option>
                        </select>
                    </div>

                    <span asp-validation-for="BrandId" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-3 col-md-6 col-sm-12">
                    <label asp-for="CategoryId" class="control-label"></label>
                    <div class="ml-2">
                        <select asp-items="@ViewBag.Categories" asp-for="CategoryId" class="form-control fk-select">
                            <option></option>
                        </select>
                    </div>

                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group ml-4">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    $(document).ready(function () {
        $('.fk-select').select2({
            placeholder: "Select a restriction",
            allowClear: true
        });
    });
</script>
