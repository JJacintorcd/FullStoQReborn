@using WebAPI.Models.EssentialGoodsViewModel;
@model ProductUnitViewModel

<div class="card">
    <div class="card-header bg-greenish-green">
        <h2 class="float-left">
            @ViewData["Title"]
        </h2>
    </div>
    <div class="card-body">
        <div class="ml-5 mr-5">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-lg-3 col-md-6 col-sm-12">
                    <label asp-for="SerialNumber" class="control-label"></label>
                    <input asp-for="SerialNumber" class="form-control ml-2" />
                    <span asp-validation-for="SerialNumber" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-3 col-md-6 col-sm-12">
                    <label asp-for="IsReserved" class="control-label"></label>
                    <input asp-for="IsReserved" class="form-control ml-2" />
                    <span asp-validation-for="IsReserved" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-3 col-md-6 col-sm-12">
                    <label asp-for="ProductModelId" class="control-label"></label>
                    <div class="ml-2">
                        <select asp-items="@ViewBag.ProductModels" asp-for="ProductModelId" class="form-control fk-select">
                            <option></option>
                        </select>
                    </div>

                    <span asp-validation-for="ProductModelId" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-3 col-md-6 col-sm-12">
                    <label asp-for="EstablishmentId" class="control-label"></label>
                    <div class="ml-2">
                        <select asp-items="@ViewBag.Establishments" asp-for="EstablishmentId" class="form-control fk-select">
                            <option></option>
                        </select>
                    </div>

                    <span asp-validation-for="EstablishmentId" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-3 col-md-6 col-sm-12">
                    <label asp-for="ShoppingBasketId" class="control-label"></label>
                    <div class="ml-2">
                        <select asp-items="@ViewBag.ShoppingBaskets" asp-for="ShoppingBasketId" class="form-control fk-select">
                            <option></option>
                        </select>
                    </div>

                    <span asp-validation-for="ShoppingBasketId" class="text-danger"></span>
                </div>
                <div class="form-group ml-4">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    $(document).ready(function () {
        $('.fk-select').select2({
            placeholder: "Select a restriction",
            allowClear: true
        });
    });
</script>