@using WebAPI.Models.EssentialGoodsViewModel;
@model ShoppingBasketViewModel

@{
    ViewBag.Title = "Edit";
}

<div class="card ml-5 mr-5">
    <div class="card-header">
        <h4 class="m-0 p-0">Edit ShoppingBasket</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <form asp-action="Edit" class="pl-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="ProfileId" class="control-label"></label>
                    <input asp-for="ProfileId" class="form-control" />
                    <span asp-validation-for="ProfileId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Edit" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>




@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}