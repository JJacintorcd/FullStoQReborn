@using WebAPI.Models.HomeViewModel;
@model SearchViewModel
@{
    ViewData["Title"] = "Home Full StoQ";
}
<section class="title">
    <div class="text">
        <h1>  Hello @User.Identity.Name! </h1>
    </div>
</section>
<section class="labels">
    <form asp-for="Search"></form>
    <form class="row">
        <div class="form-group select-company col-4 ">
            <label asp-for="CompanyId" class="control-label"></label>
            <div>
                <select asp-items="@ViewBag.Companies" asp-for="CompanyId" class="form-control">
                    <option></option>
                </select>
            </div>
            <span asp-validation-for="CompanyId" class="text-danger"></span>
        </div>
        <div class="form-group select-region col-4 ">
            <label asp-for="RegionId" class="control-label"></label>
            <div>
                <select asp-items="@ViewBag.Regions" asp-for="RegionId" class="form-control">
                    <option></option>
                </select>
            </div>
            <span asp-validation-for="RegionId" class="text-danger"></span>
        </div>
        <div class="form-group col-2">
            <input type="submit" value="Search" class="btn btn-primary btn-search" style="width:70px" />
        </div>
    </form>
</section>
<section>
    <div class="title-a">
        <h2>
            Main Stores
        </h2>
    </div>
    <section class="images">
        <img src="~/images/logo-company1.jpg" class="img" />
        <img src="~/images/logo-company1.jpg" class="img" />
        <img src="~/images/logo-company1.jpg" class="img" />
        <img src="~/images/logo-company1.jpg" class="img" />
        <img src="~/images/logo-company1.jpg" class="img" />
    </section>
</section>

<script>
    $(document).ready(function () {
        $('.fk-select').select2({
            placeholder: "Select a Value",
            allowClear: true
        });
    });
</script>





